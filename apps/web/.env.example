# Frontend Environment Variables
# Only VITE_ prefixed variables are exposed to the client bundle

# API Configuration
VITE_API_URL=http://localhost:3000

# Application Configuration
VITE_APP_NAME=Comptario
VITE_APP_VERSION=2.0.0

# Login Configuration
VITE_LOGIN_URL=/login

# Development Configuration (non-sensitive)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Feature Flags (publicly visible)
VITE_ENABLE_CSP_REPORTING=true
VITE_ENABLE_RATE_LIMITING=true

# Demo Configuration (development only - publicly visible)
VITE_DEMO_EMAIL=demo@comptario.com
VITE_DEMO_PASSWORD=demo123

# Security Configuration (client-side settings only)
VITE_ENABLE_ENCRYPTION=true
VITE_USE_SECURE_CRYPTO=true

# WARNING: Never put server secrets, API keys, database credentials, 
# or JWT secrets in VITE_ variables as they will be exposed in the client bundle!