# Backend Environment Variables
# NEVER expose these variables to the client

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=comptario_user
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_NAME=comptario_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Secrets - Use strong, unique keys (minimum 256 bits)
JWT_SECRET=your_super_secret_jwt_key_min_256_bits_long_very_secure_key_here_change_me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_token_secret_key_different_from_access_token_change_me
JWT_REFRESH_EXPIRES_IN=7d

# Admin Credentials - ALWAYS use hashed passwords
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$10$hash_of_your_admin_password_here_use_bcrypt

# Encryption Keys - Server-side encryption (minimum 32 characters)
ENCRYPTION_KEY=your_super_secure_server_encryption_key_min_32_chars_change_me_now
ENCRYPTION_ALGORITHM=aes-256-gcm

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=localhost

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Email Configuration (if using email features)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=noreply@yourdomain.com

# Session Configuration
SESSION_SECRET=your_session_secret_key_minimum_32_characters_long_and_secure

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=error
LOG_FILE_PATH=./logs/app.log

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_32_chars_minimum_here_change_me
BACKUP_RETENTION_DAYS=30

# Third-party API Keys (if any)
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
# SENDGRID_API_KEY=your_sendgrid_api_key_here